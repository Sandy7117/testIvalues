<section class="split-banner">
  <div class="split-container">
    <!-- Left Image -->
    <div class="split-image">
      <img src="{{ 'https://cdn.shopify.com/s/files/1/0907/0939/3771/files/Screenshot_2025-03-28_at_9.56.53_AM.png?v=1743136076' | asset_url }}" alt="Sustainability">
    </div>

    <!-- Right Text -->
    <div class="split-text">
      <div class="text-content active" data-text="responsibility">
        <h2>Doing the right thing</h2>
        <p>Reduce and reuse. Weâ€™re pushing to net zero CO2 by 2035, and rolling out circular services.</p>
        <a href="#" class="btn">Discover more</a>
      </div>
      <div class="text-content" data-text="durability">
        <h2>Built to Last</h2>
        <p>Our products are designed for durability, reducing waste and maximizing usability.</p>
        <a href="#" class="btn">Learn more</a>
      </div>
      <div class="text-content" data-text="innovation">
        <h2>Innovating for the Future</h2>
        <p>We integrate cutting-edge technology to make sustainable solutions more accessible.</p>
        <a href="#" class="btn">Explore more</a>
      </div>

      <!-- Hover Tabs -->
      <div class="hover-tabs">
        <span class="tab active" data-tab="responsibility">Responsibility</span>
        <span class="tab" data-tab="durability">Durability</span>
        <span class="tab" data-tab="innovation">Innovation</span>
      </div>
    </div>
  </div>
</section>

<style>
  .split-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px 0;
  }

  .split-container {
    display: flex;
    width: 90%;
    max-width: 1200px;
    overflow: hidden;
    border-radius: 15px;
  }

  .split-image {
    flex: 1;
    overflow: hidden;
  }

  .split-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .split-text {
    flex: 1;
    background: #a8e6a3;
    padding: 60px;
    position: relative;
    transition: background 0.5s ease-in-out;
  }

  .text-content {
    display: none;
    transition: opacity 0.4s ease-in-out;
  }

  .text-content.active {
    display: block;
    opacity: 1;
  }

  .hover-tabs {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    gap: 15px;
  }

  .hover-tabs .tab {
    font-weight: bold;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.3s;
  }

  .hover-tabs .tab.active {
    opacity: 1;
    text-decoration: underline;
  }

  .btn {
    display: inline-block;
    margin-top: 15px;
    padding: 10px 20px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
  }
</style>

<script>
  document.querySelectorAll('.hover-tabs .tab').forEach(tab => {
    tab.addEventListener('click', function() {
      document.querySelector('.hover-tabs .tab.active').classList.remove('active');
      this.classList.add('active');

      let selectedText = this.dataset.tab;
      document.querySelector('.text-content.active').classList.remove('active');
      document.querySelector(`.text-content[data-text="${selectedText}"]`).classList.add('active');
    });
  });
</script>



