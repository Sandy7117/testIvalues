<style>
    .swiper-container {
      width: 100%;
      overflow: hidden;
      position: relative;
    }
  
    .split-container {
      display: flex;
      width: 100%;
      border-radius: 15px;
      overflow: hidden;
    }
  
    .split-image {
      flex: 1;
      min-width: 50%;
      overflow: hidden;
    }
    .fixed-text-bottom-img {
      width: 40px;
      height: auto;
    }
  
    .split-image img {
      width: 100%;
      height: auto;
      display: block;
    }
  .dynamic-description {
      display: flex;
      text-align: justify;
      margin: 0;
  }
    .split-text {
      max-width: 50%;
      flex: 1;
      padding: 60px;
      color: #000;
      transition: background 0.5s ease-in-out;
      position: relative;
    }

    .fixed-text-bottom {
      position: absolute;
      bottom: 40px;
      width: 85%;
      display: flex;
      flex-direction: column;
    }
  
    .fixed-text {
      display: flex;
      gap: 20px;
      font-size: 16px;
      flex-wrap: wrap;
      text-transform: uppercase;
      font-weight: 600;
    }
  
    .hover-text {
      cursor: pointer;
      opacity: .5;
      transition: color 0.3s ease-in-out;
    }

    .dynamic-title {
      display: flex;
      font-weight: 600;
      font-size: 40px;
      margin: 5px 0;
    }

    .media>*:not(.zoom):not(.deferred-media__poster-button), .media model-viewer {
      position: relative;
    }

  
    .hover-text:hover,
    .hover-text.active {
      opacity: 1;
      color: black;
      font-weight: bold;
      text-decoration: underline;
    }
  
    .banner-swiper-button-prev, .banner-swiper-button-next {
      color: black;
    }
  
    .btn {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 40px;
      width: 110px;
      color: #000;
      background: #fff;
      border: 1px solid #000;
    }

    .swiper-container-{{ section.id }} {
      overflow: hidden
    }
  </style>
  
<section class="swiper-container-{{ section.id }}">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
            <div class="split-container">
                <!-- Left Image -->
                <div class="split-image">
                    {% if block.settings.banner_image != blank %}
                    <img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="Banner Image">
                    {% endif %}
                </div>

                <!-- Right Text -->
                <div class="split-text" style="background-color: {{ block.settings.text_bg_color }}">
                    <div class="fixed-text">
                        <span class="hover-text active" data-text="Durability">Durability</span>
                        <span class="hover-text" data-text="Innovation">Innovation</span>
                        <span class="hover-text" data-text="Responsibility">Responsibility</span>
                    </div>

                    <div class="fixed-text-bottom">
                        <img class="fixed-text-bottom-img" src="{{ block.settings.banner-logo | img_url: 'master' }}"
                            alt="Banner Image">
                        <h2 class="dynamic-title">{{ block.settings.title }}</h2>
                        <p class="dynamic-description">{{ block.settings.description }}</p>
                        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                        <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Swiper Navigation -->
    <div class="banner-swiper-button-prev"></div>
    <div class="banner-swiper-button-next"></div>
</section>
    
   
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.swiper-container-{{ section.id }}', {
          loop: true,
          slidesPerView: 1,
          spaceBetween: 20,
          navigation: {
            nextEl: '.banner-swiper-button-next',
            prevEl: '.banner-swiper-button-prev',
          }
        });
    
        document.querySelectorAll('.hover-text').forEach(item => {
          item.addEventListener('click', function() {
            document.querySelectorAll('.hover-text').forEach(el => el.classList.remove('active'));
            this.classList.add('active');
    
            const newText = this.getAttribute('data-text');
            document.querySelector('.dynamic-title').textContent = newText;
          });
        });
      });
    </script>


{% schema %}
    {
      "name": "Split Banner Slider",
      "class": "split-banner",
      "settings": [],
      "blocks": [
        {
          "type": "banner",
          "name": "Banner Slide",
          "settings": [
            {
              "type": "image_picker",
              "id": "banner_image",
              "label": "Left Image"
            },
            {
              "type": "image_picker",
              "id": "banner-logo",
              "label": "Right logo Image"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Doing the right thing"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description",
              "default": "Reduce and reuse. Weâ€™re pushing to net zero CO2 by 2035, and rolling out circular services."
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "Button Link"
            },
            {
              "type": "text",
              "id": "button_text",
              "label": "Button Text",
              "default": "Discover more"
            },
            {
              "type": "color",
              "id": "text_bg_color",
              "label": "Text Background Color",
              "default": "#a8e6a3"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Split Banner Slider",
          "category": "Image"
        }
      ]
    }
    {% endschema %}
    